{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:PutObjectAcl"
            ],
            "Resource": "arn:aws:s3:::newsteps-images/*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:CreateBucket",
                "s3:ListBucket",
                "s3:GetBucketLocation",
                "s3:PutBucketPolicy",
                "s3:GetBucketPolicy",
                "s3:PutBucketAcl",
                "s3:GetBucketAcl",
                "s3:PutPublicAccessBlock",
                "s3:GetPublicAccessBlock"
            ],
            "Resource": "arn:aws:s3:::newsteps-images"
        }
    ]
}
