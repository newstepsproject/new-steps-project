# Production Environment Template
# Replace all placeholder values with real production credentials

GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Email (AWS SES SMTP or other SMTP)
EMAIL_FROM=newstepsfit@gmail.com
EMAIL_SERVER=email-smtp.us-west-2.amazonaws.com
EMAIL_PORT=587
EMAIL_USERNAME=your_ses_smtp_username
EMAIL_PASSWORD=your_ses_smtp_password

# PayPal
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_live_client_id

# Storage provider: 'local' or 's3'
STORAGE_PROVIDER=s3
S3_REGION=us-west-2
S3_BUCKET=newsteps-images
S3_PREFIX=images
# Public base URL for CloudFront (no trailing slash), e.g. https://dxxxxxxxx.cloudfront.net
S3_PUBLIC_URL=https://cdn.newsteps.fit
